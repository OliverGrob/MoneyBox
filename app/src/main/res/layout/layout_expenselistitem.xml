<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/expenseListItemConstraintLayout">

    <TextView
            android:text="14"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.1"
            android:id="@+id/expenseAdditionDateTextView"
            android:textSize="15sp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="300000"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.2"
            android:id="@+id/expenseAmountTextView"
            android:textSize="15sp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@+id/expenseAdditionDateTextView"
            app:layout_constraintStart_toEndOf="@+id/expenseAdditionDateTextView"
            app:layout_constraintBottom_toBottomOf="@+id/expenseAdditionDateTextView"/>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            android:padding="5dp"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:text="Example payment description"
            android:id="@+id/expenseDescriptionTextView"
            app:layout_constraintStart_toEndOf="@+id/expenseAmountTextView"
            app:layout_constraintTop_toTopOf="@+id/expenseAmountTextView"
            app:layout_constraintBottom_toBottomOf="@+id/expenseAmountTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>