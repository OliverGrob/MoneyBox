<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:id="@+id/root_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/category_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="@drawable/backdrop_text_field_style"
                android:maxHeight="100dp"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:textColorHint="@color/colorPrimaryText"
                app:hintTextAppearance="@style/TextInputLabelColor">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_close_white_24dp"
                    android:drawablePadding="12dp"
                    android:hint="Category"
                    android:paddingTop="4dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="italic" />

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                <LinearLayout
                        android:id="@+id/category_scroll_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
            </ScrollView>

        </com.google.android.material.textfield.TextInputLayout>

        <include layout="@layout/horizontal_input_divider" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amount_min_text_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/backdrop_text_field_style"
                    android:minWidth="135dp"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"
                    android:textColorHint="@color/colorPrimaryText"
                    app:hintTextAppearance="@style/TextInputLabelColor">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount_min_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Min amount"
                        android:inputType="numberDecimal"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText"
                        android:textStyle="italic" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amount_max_text_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="24dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/backdrop_text_field_style"
                    android:minWidth="135dp"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"
                    android:textColorHint="@color/colorPrimaryText"
                    app:hintTextAppearance="@style/TextInputLabelColor">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount_max_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Max amount"
                        android:inputType="numberDecimal"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText"
                        android:textStyle="italic" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

</layout>