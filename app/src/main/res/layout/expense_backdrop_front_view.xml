<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:id="@+id/root_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backdrop_rounded_upper_corners"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/header_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backdrop_rounded_upper_corners"
                android:elevation="4dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/header_item_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:gravity="start"
                    android:padding="16dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    tools:text="10 Item(s)" />

            <TextView
                    android:id="@+id/header_selection_all_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="16dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    tools:text="All" />

            <TextView
                    android:id="@+id/header_selection_first_right_arrow_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="16dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    tools:text=">" />

            <TextView
                    android:id="@+id/header_selection_year_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="16dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    tools:text="2019" />

            <TextView
                    android:id="@+id/header_selection_second_right_arrow_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="16dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    tools:text=">" />

            <TextView
                    android:id="@+id/header_selection_month_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="16dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    tools:text="January" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/body_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".presentation.MainActivity">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/year_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                    android:id="@+id/total_money_spent_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorInputBackground"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/year_recycler_view" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_expense_floating_action_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:foregroundGravity="bottom|right"
                    android:src="@drawable/ic_add_white_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                    android:id="@+id/total_money_spent_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="16dp"
                    android:elevation="4dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/total_money_spent_divider"
                    tools:text="No total yet" />

            <TextView
                    android:id="@+id/total_money_spent_average_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="@id/total_money_spent_text_view"
                    app:layout_constraintStart_toEndOf="@id/total_money_spent_text_view"
                    app:layout_constraintTop_toTopOf="@id/total_money_spent_text_view"
                    tools:text="(30550/month)" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>