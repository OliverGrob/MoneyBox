<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.expense.ExpenseAddAndEditActivity">

    <EditText
            android:id="@+id/expenseAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Expense Amount"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:scrollbars="vertical"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <AutoCompleteTextView
            android:id="@+id/expenseDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Expense Description"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:scrollbars="vertical"
            android:inputType="textAutoCorrect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expenseAmountEditText"/>

    <TextView
            android:id="@+id/datePickerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Date of Expense"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="@+id/expenseDescriptionEditText"
            app:layout_constraintTop_toBottomOf="@+id/expenseDescriptionEditText"
            app:layout_constraintStart_toStartOf="@+id/expenseDescriptionEditText"/>

    <TextView
            android:id="@+id/categoryCheckboxToggleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Category â–¶"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="@+id/datePickerTextView"
            app:layout_constraintTop_toBottomOf="@+id/datePickerTextView"
            app:layout_constraintStart_toStartOf="@+id/datePickerTextView"/>

    <ScrollView android:id="@+id/categoryScrollView"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="@+id/categoryCheckboxToggleTextView"
                app:layout_constraintTop_toBottomOf="@+id/categoryCheckboxToggleTextView"
                app:layout_constraintStart_toStartOf="@+id/categoryCheckboxToggleTextView"
                android:visibility="gone">
        <RadioGroup
                android:id="@+id/categoryRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Category 1"
                app:layout_constraintEnd_toEndOf="@+id/categoryCheckboxToggleTextView"
                app:layout_constraintTop_toBottomOf="@+id/categoryCheckboxToggleTextView"
                app:layout_constraintStart_toStartOf="@+id/categoryCheckboxToggleTextView">
        </RadioGroup>
    </ScrollView>

    <Button android:text="Positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expenseAddEditPositiveButton"
            android:onClick="onPositive"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expenseAddEditCancelButton"
            android:onClick="onCancel"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toStartOf="@+id/expenseAddEditPositiveButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>