<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="categoryWithExpenses"
                type="com.ogrob.moneybox.persistence.model.CategoryWithExpenses" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/categoryListItemConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/expense_category_color"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@{categoryWithExpenses.category.color}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.01" />

        <TextView
                android:id="@+id/category_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:text="@{categoryWithExpenses.category.name+' '+'('+categoryWithExpenses.expenses.size()+')'}"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.99"
                tools:text="Electronic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>