<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expense_fragment_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".presentation.expense.ExpenseActivity">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/expenses_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/year_spinner"
                app:layout_constraintVertical_bias="0.0" />

        <Button
                android:id="@+id/add_expense_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="16dp"
                android:text="+ Expense"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expenses_recycler_view" />

        <TextView
                android:id="@+id/total_money_spent_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="No total yet"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/add_expense_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/add_expense_button" />

        <Spinner
                android:id="@+id/year_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:dropDownWidth="fill_parent"
                app:layout_constraintStart_toStartOf="@+id/expenses_recycler_view"
                app:layout_constraintTop_toTopOf="parent" />

        <Spinner
                android:id="@+id/month_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:dropDownWidth="fill_parent"
                app:layout_constraintBottom_toBottomOf="@+id/year_spinner"
                app:layout_constraintStart_toEndOf="@+id/year_spinner"
                app:layout_constraintTop_toTopOf="@+id/year_spinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>