<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.expense.ExpensesActivity"
        android:id="@+id/expenseConstraintLayout">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yearSpinner"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/expensesRecyclerView"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button android:text="Add New Expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAddNewExpense"
            android:id="@+id/addExpenseButton"
            android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/expensesRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="131dp"
            android:layout_marginEnd="131dp"/>
    <Button android:text="+ Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAddNewCategory"
            android:id="@+id/addCategoryButton"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/addExpenseButton"
            app:layout_constraintBottom_toBottomOf="@+id/addExpenseButton"
            app:layout_constraintStart_toEndOf="@+id/addExpenseButton"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalMoneySpentTextView"
            app:layout_constraintTop_toTopOf="@+id/addExpenseButton"
            app:layout_constraintBottom_toBottomOf="@+id/addExpenseButton"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:text="No total yet"
            android:layout_marginStart="16dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yearSpinner"
            app:layout_constraintStart_toStartOf="@+id/expensesRecyclerView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:dropDownWidth="fill_parent"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monthSpinner"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/yearSpinner"
            app:layout_constraintTop_toTopOf="@+id/yearSpinner"
            app:layout_constraintBottom_toBottomOf="@+id/yearSpinner"
            android:dropDownWidth="fill_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>