<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_OLD</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_OLD</item>
        <item name="colorAccent">@color/colorAccent_OLD</item>
        <item name="android:colorBackground">@color/colorPrimaryDark_OLD</item>
        <item name="android:textColor">@color/colorPrimaryText</item>

        <item name="colorControlNormal">@color/colorControlNormal_OLD</item>
        <item name="colorControlActivated">@color/colorAccent_OLD</item>
        <item name="colorControlHighlight">@color/colorPrimary_OLD</item>

        <item name="toolbarStyle">@style/CustomToolbarStyle</item>

        <item name="chipStyle">@style/CustomFilterChipStyle</item>

        <item name="floatingActionButtonStyle">@style/CustomFloatingActionButtonStyle</item>

        <item name="bottomNavigationStyle">@style/CustomBottomNavigationView</item>

        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialogStyle</item>

        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/colorPrimaryGrey</item>
        <item name="titleTextColor">@color/colorPrimaryText</item>
    </style>

    <style name="CustomFilterChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/chip_colors</item>

        <item name="textStartPadding">1dp</item>
        <item name="textEndPadding">1dp</item>

        <item name="shapeAppearanceOverlay">@style/SharpCorners</item>
    </style>

    <style name="SharpCorners" parent="ShapeAppearanceOverlay.MaterialComponents.Chip">
        <item name="cornerSize">0%</item>
    </style>

    <style name="CustomFloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="colorAccent">@color/colorPrimaryGreen</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="itemRippleColor">@color/bottom_navigation_color</item>
        <item name="itemBackground">@drawable/bottom_navigation_background</item>
    </style>

    <style name="TextInputLabelStyle">
        <item name="boxStrokeColor">@color/colorPrimaryText</item>
        <item name="hintTextColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorPrimaryText</item>
    </style>

    <style name="CustomDatePickerDialogStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorPrimaryGreen</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimaryGreen</item>
        <item name="android:backgroundTint">@color/colorPrimaryText</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/material_button_background_color</item>
        <item name="android:textColor">@color/material_button_text_color</item>
        <item name="strokeColor">@color/material_button_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">#212121</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="backgroundTint">@color/colorPrimaryGreen</item>
    </style>
    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="backgroundTint">@color/colorNegative</item>
    </style>

</resources>
